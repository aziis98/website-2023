---
import Tag from "./Tag.astro";

const { url, title, description, date, tags } = Astro.props;
---

<div class="article-card">
	<div class="title">
		<a href={url ?? "#"}>{title}</a>
	</div>
	{date && <div class="date">{date}</div>}
	<div class="description">{description}</div>
	<div class="tags">
		{tags.map((name) => <Tag {name} />)}
	</div>
</div>
